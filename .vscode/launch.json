    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Tests",
            "request": "launch",
            "mainClass": "tests.Test",
            "args": "TEST --folder ${input:dump}"
        },
        {
            "type": "java",
            "name": "Launch specific phase",
            "request": "launch",
            "mainClass": "Main",
            "args": "PINS quickTest.pins23 --dump ${input:dump}"
        },
        {
            "type": "java",
            "name": "Launch compiler",
            "request": "launch",
            "mainClass": "Main",
            "args": "PINS quickTest.pins23"
        }
    ],
    "inputs": [
        {
            "id": "dump",
            "description": "the phase of compiler you want to run",
            "type": "pickString",
            "options": [
                "LEX",
                "SYN",
                "AST",
                "NAME",
                "TYP",
                "FRM",
                "IMC",
                "INT",
            ]
        }
    ]
}